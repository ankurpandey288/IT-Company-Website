
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutUsers.cshtml";
}

@Html.Hidden("Admin", Session["user_id"])
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-body  met-pro-bg">
                    <div class="met-profile">
                        <div class="row">
                            <div class="col-lg-4 align-self-center mb-3 mb-lg-0">
                                <div class="met-profile-main">
                                    <div class="met-profile-main-pic">
                                        @*<img src="../assets/images/users/user-4.jpg" alt="" class="rounded-circle">
                                            <span class="fro-profile_main-pic-change">
                                                <i class="fas fa-camera"></i>
                                            </span>*@
                                    </div>
                                    <div class="met-profile_user-detail">
                                        <h5 class="met-user-name" id="txtuser"></h5>
                                        <p class="mb-0 met-user-name-post">
                                            Admin
                                        </p>
                                    </div>
                                </div>
                            </div><!--end col-->
                            <div class="col-lg-4 ml-auto">
                                <ul class="list-unstyled personal-detail">
                                    <li class="mt-2"><i class="dripicons-mail text-info font-18 mt-2 mr-2"></i> <b> Email </b> : <span id="txtemail"></span></li>
                                </ul>
                            </div><!--end col-->
                        </div><!--end row-->
                    </div><!--end f_profile-->
                </div><!--end card-body-->
            </div><!--end card-->
        </div><!--end col-->
    </div>

    <div class="row">
        <div class="col-lg-12 col-xl-9 mx-auto">
            <div class="card mt-5">
                <div class="card-body">
                    <div class="form-horizontal form-material mb-0">
                        <div class="form-group">
                            @*<textarea rows="5" placeholder="Message" class="form-control"></textarea>*@
                            <div class="input-group mb-3">
                                <div class="col-md-6">
                                    <label class="col-form-label">Password</label>
                                    <input class="form-control" placeholder="Password" id="txtPsd" type="password" />
                                    <ul class="parsley-errors-list filled" id="SpnPsd" style="display:none">
                                        <li class="parsley-required">This field is required</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <label class="col-form-label">Confirm Password</label>
                                    <input class="form-control" placeholder="Password" id="txtCnPsd" type="password" />
                                    <ul class="parsley-errors-list filled" id="SpnCnPsd" style="display:none">
                                        <li class="parsley-required">This field is required</li>
                                    </ul>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-gradient-primary btn-sm px-5 mt-3 mb-0" id="btnSubmit">Change Password</button>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!--end col-->
    </div>
</div>

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.js"></script>
<script src="~/Scripts/View/Common/Common.js"></script>
<script src="~/Scripts/View/Admin/Changepassword.js"></script>

