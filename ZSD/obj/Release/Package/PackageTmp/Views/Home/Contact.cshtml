                    <!-- start contact item -->
                    <div class="col-12 col-md-6 bg-black d-flex flex-column justify-content-center align-items-center text-center height-350px last-paragraph-no-margin">
                        <i class="icon-chat text-deep-pink icon-medium margin-25px-bottom"></i>
                        <div class="text-white-2 text-uppercase alt-font font-weight-600 margin-5px-bottom">Let's Talk</div>
                        <p class="mx-auto text-medium mb-0">Phone:1800-120-2214</p>
                        <p class="mx-auto text-medium"></p>
                    </div>
                    <!-- end contact item -->
                    <!-- start contact item -->
                    <div class="col-12 col-md-6 bg-black d-flex flex-column justify-content-center align-items-center text-center height-350px last-paragraph-no-margin">
                        <i class="icon-envelope text-deep-pink icon-medium margin-25px-bottom"></i>
                        <div class="text-white-2 text-uppercase alt-font font-weight-600 margin-5px-bottom">Email Us</div>
                        General Enquiry: <a href="mailto:hello@zservicedesk.com">hello@zservicedesk.com</a>
