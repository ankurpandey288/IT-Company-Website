                    <!-- end contact item -->
                </div>
            </div>
        </div>
    </div>
</section>

<section class="wow fadeIn" id="start-your-project">
    <div class="container">
        <div class="row justify-content-center" style="height:120px;">
            <div class="col-12 col-lg-6 col-md-8 margin-eight-bottom md-margin-40px-bottom sm-margin-30px-bottom text-center last-paragraph-no-margin">
                <h5 class="alt-font font-weight-700 text-extra-dark-gray text-uppercase" style="font-size: 23px;">
                    WE WOULD BE HAPPY TO HEAR FROM YOU<br>
                    CONTACT OUR EXPERTS
                </h5>
            </div>
        </div>
        <form id="project-contact-form" action="Contact" method="post">
            <div class="row">
                <div class="col-12">
                    <div id="success-project-contact-form" class="mx-0"></div>
                </div>
                <div class="col-12 col-lg-6">
                    <input type="text" name="name" required id="name" placeholder="Name*" class="big-input">
                </div>
                <div class="col-12 col-lg-6">
                    <input type="text" name="Companyname" required id="phone" placeholder="Company name*" class="big-input">
                </div>
                <div class="col-12 col-lg-6">
                    <input type="text" name="Email" required id="phone" placeholder="Email*" class="big-input">
                </div>
                <div class="col-12 col-lg-6">
                    <input type="text" name="phone" required id="phone" placeholder="Phone*" class="big-input">
                </div>
                <div class="col-12">
                    <textarea name="comment" required id="comment" placeholder="Your Meassage *" rows="6" class="big-textarea"></textarea>
                </div>
                <div class="col-12 text-center">
                    <button id="project-contact-us-button submit" type="submit" class="btn btn-transparent-dark-gray btn-large margin-20px-top">send message</button>
                </div>
            </div>
        </form>
    </div>
</section>
